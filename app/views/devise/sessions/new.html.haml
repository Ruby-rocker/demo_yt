%section.loginBar
  %section.loginWrapper
    %section.loginLogo
      = image_tag "yestrak-logo-black.png", width: "187"
    = form_for(resource, :as => resource_name, :url => (action_name.include?('client_login_') ? client_login_path : session_path(resource_name))) do |f|
      %ul
        %li
          %label.label Email:
          = f.email_field :email, :autofocus => true, placeholder: "Email Address", type: "text", class: :input
        %li
          %label.label Password:
          = f.password_field :password, placeholder: "Password", type: "password", class: :input
        %li.checkBox
          = f.check_box :remember_me
          %label Keep me signed in
        %li
          = button_tag "Sign In", class: "btn_signin", name: "Sign In"
      %p.forgot_password
        = link_to "Forgot your password?", new_password_path(resource_name), class: :link
        %br/
        Don’t have a YesTrak account?
        = succeed "." do
          = link_to "Sign-up now", new_registration_path(resource_name), class: :link
        %br/
        Didn’t receive confirmation instructions?
        = succeed "." do
          = link_to "Resend confirmation", new_confirmation_path(resource_name), class: :link