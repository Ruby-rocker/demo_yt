= devise_error_messages!
%section.loginBar
  %section.loginWrapper
    %section.loginLogo
      = image_tag "yestrak-logo-black.png", width: "187"
    = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:method => :post}) do |f|
      %ul
        %li
          .forgot_pass_title
            %h1
              Forgot Password
      %ul
        %li
          %label.label Email:
          = f.email_field :email, :autofocus => true, placeholder: "Email Address", type: "text", class: :input
        %li
          = f.button "Reset Password", class: :btn_signin
      %p.forgot_password
        = link_to "Go to Sign-in", new_session_path(resource_name), class: :link
        %br/
        Don’t have a YesTrak account?
        = succeed "." do
          = link_to "Sign-up now", new_registration_path(resource_name), class: :link
        %br/
        Didn’t receive confirmation instructions?
        = succeed "." do
          = link_to "Resend confirmation", new_confirmation_path(resource_name), class: :link