= devise_error_messages!
%section.loginBar
  %section.loginWrapper
    %section.loginLogo
      = image_tag "yestrak-logo-black.png", width: "187"
    = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f|
      %ul
        %li
          .forgot_pass_title
            %h1
              Change your password
      
      = f.hidden_field :reset_password_token
      %ul
        %li
          %label.label New password:
          = f.password_field :password, :autofocus => true, class: :input
        %li
          %label.label Confirm password:
          = f.password_field :password_confirmation, class: :input
        %li
          = f.button "Change my password", class: :btn_signin
      %p.forgot_password
        = link_to "Go to Sign-in", new_session_path(resource_name), class: :link
        %br/
        Don’t have a YesTrak account?
        = succeed "." do
          = link_to "Sign-up now", new_registration_path(resource_name), class: :link
        %br/
        Didn’t receive confirmation instructions?
        = succeed "." do
          = link_to "Resend confirmation", new_confirmation_path(resource_name), class: :link