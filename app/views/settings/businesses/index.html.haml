%section.page_title
  Businesses

%section.businesses
  %section.company_of_businesses
    - if @business.present?
      %div.head
        %table{width: "100%", border: "0", cellspacing: "0", cellpadding: "0"}
          %tr
            %td.header_name Business Name
            %td.header_actions
              %span.ed_business Edit/Delete
      - @business.each do |b|
        %div.companys
          %table{width: "100%", border: "0", cellspacing: "0", cellpadding: "0"}
            %tr
              %td.company_name{width: "72%"}
                = b.name
                %span
                  = b.address.street
              %td{width: "18%"}
                = link_to "Edit", edit_settings_business_path(b), class: "eidt"
              %td{width: "10%"}
                = link_to (image_tag "btn_close@2x.png", width: "19", height: "19", alt: ""), settings_business_path(b), confirm: "Are you sure you want to delete this business?", method: :delete
    - else
      %div.head
        %div.companys
          %table{width: "100%", border: "0", cellspacing: "0", cellpadding: "0"}
            %tr
              %td.company_name{width: "72%", align: :center}
                %span
                  No Record Found
    %div.add_new_business
      %table{width: "100%", border: "0", cellspacing: "0", cellpadding: "0"}
        %tr
          %td.label{width: "72%"} Add New Business
          %td{width: "28%"}
            = link_to "Add", new_settings_business_path, class: "add", style: 'margin-right:19px;'