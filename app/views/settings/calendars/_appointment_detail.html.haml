= javascript_include_tag "datepair"
%section.appointmentRow
  %section.formSection
    = hidden_field_tag "index_value", "#{@count.to_i + 1}", class: "index_count"
    = hidden_field_tag "calendar[calendar_hours_attributes][#{@count.to_i + 1}][hours_type]", "windows"
    %ul
      - CalendarHour::DAYS_NAME.each do |day_name|
        %li
          = check_box_tag "calendar[calendar_hours_attributes][#{@count.to_i + 1}][week_days][]",day_name, class: "required"
          = label_tag day_name
    %table.inputTime.datepair{border: "0", cellpadding: "0", cellspacing: "0"}
      %tr
        %td{width: "60"}
          = text_field_tag "calendar[calendar_hours_attributes][#{@count.to_i + 1}][start_time]", "", placeholder: "9:00AM", class: "time start required"
        %td{style: "text-align:center;", width: "50"} to
        %td{width: "60"}
          = text_field_tag "calendar[calendar_hours_attributes][#{@count.to_i + 1}][close_time]", "", placeholder: "5:00PM", class: "time end required"
    %a.action{"data-remote" => "true", href: "javascript:;", onclick: "remove_appointment_detail(this)"}
      = image_tag "btn_close@2x.png", width: "25"