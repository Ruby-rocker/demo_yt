.formNotes
  %h1 NOTES
  - @notes.each do |n|
    %section.tablebodyContent{note_id: n.id}
      .noteswrap
        %a.btnDelete{href: "#"}
          = link_to (image_tag "btn_close@2x.png", width: "19"), destroy_note_contacts_path(n), confirm: 'Are you sure you want to delete this note?', remote: true, class: 'button', style: "float:right; margin-bottom: -10px"
        %p
          = n.content
        %span
          = n.created_at.strftime('%B %-d, %Y')
          %i
            - if n.user_id.present?
              = n.full_name
            - else
              = "Call Center"
  - if @all_notes.size > 2
    %b
      %a{href: view_all_notes_contacts_path(@contact), :class => "view fancybox fancybox.ajax"} VIEW ALL
      = (@all_notes.size - 2).to_s + " more notes"